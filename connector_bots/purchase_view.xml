<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="purchase_order_form_customs" model="ir.ui.view">
            <field name="name">purchase.order.form.customs</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="date_approve" position="after">
                    <field name="bots_customs"/>
                </field>
                <xpath expr="/form//tree/field[@name='price_subtotal']" position="after">
                    <field name="transferred_rate" widget="progressbar_custom"/>
                    <field name="partially_received" invisible="1"/>
                </xpath>
                <xpath expr="/form//tree[@string='Purchase Order Lines']" position="attributes">
                    <attribute name="colors">red: partially_received</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
